{
  "name": "nova-ts",
  "version": "0.1.0",
  "type": "module",
  "description": "NOVA (text) encoder/decoder + Express middleware + CLI (TypeScript)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nova-ts": "dist/cli.js"
  },
  "exports": {
